            </GridPane>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="366.0">
               <children>
                  <Button mnemonicParsing="false" text="Prihlásiť" />
                  <Label text="alebo">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>
                  <Button fx:id="registerButton" onAction="#openRegisterWindowPopup" mnemonicParsing="false" text="Registrovať">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
