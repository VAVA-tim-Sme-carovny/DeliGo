<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.deligo.Frontend.Controllers.Employee.EmployeeTopPanelController">

    <center>
        <HBox spacing="10" BorderPane.alignment="TOP_CENTER">
            <children>

                <!-- Ľavá strana: objednávky a admin -->
                <HBox fx:id="buttonContainer" spacing="10">
                    <children>
                        <Button text="Aktuálne objednávky" fx:id="ordersButton"/>
                        <Button text="Admin Panel" fx:id="adminButton" visible="false"/>
                    </children>
                </HBox>

                <!-- Medzera (zarovná domov doprava) -->
                <Region HBox.hgrow="ALWAYS" />

                <!-- Pravá strana -->
                <Button text="Domov" fx:id="homeBtn" />
                <Button text="logout" fx:id="logoutBtn" />

            </children>
        </HBox>
    </center>

</BorderPane>