<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.deligo.Frontend.Controllers.Employee.EmployeeTopPanelController">

   <center>
      <HBox spacing="10" BorderPane.alignment="TOP_CENTER">
         <children>

            <!-- HBox pre dynamické tlačidlá vľavo -->
            <HBox fx:id="buttonContainer" spacing="10"/>

            <!-- Medzera medzi ľavou a pravou stranou -->
            <Region HBox.hgrow="ALWAYS" />

            <!-- Tlačidlo Domov napravo -->
            <Button text="Domov" fx:id="HomeBtn"/>

         </children>
      </HBox>
   </center>
</BorderPane>
