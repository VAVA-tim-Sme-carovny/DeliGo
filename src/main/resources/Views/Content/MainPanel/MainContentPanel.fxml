<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.deligo.Frontend.Controllers.MainPage.MainPanelController"
            stylesheets="@/css/MainPage/MainContentPanel.css"
            id="mainPageBackground">

<children>
        <VBox alignment="TOP_CENTER" spacing="25.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <padding>
                <Insets top="0" left="0" right="0" bottom="50"/>
            </padding>

            <children>
                <HBox alignment="CENTER">
                    <children>
                        <Label text="Názov reštaurácie" id="RestaurantNameLabel">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <HBox alignment="CENTER">
                    <children>
                        <Button text="%order"
                        fx:id="OrderBtn"/>
                    </children>
                </HBox>

                <HBox alignment="CENTER">
                    <children>
                        <Button text="%bookTable"
                        fx:id="BookTableBtn"/>
                    </children>
                </HBox>
            </children>
        </VBox>

    </children>
</AnchorPane>
