<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.Label?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.deligo.Frontend.Controllers.OrderPage.OrderPanelController">

   <center>
      <ScrollPane fitToWidth="true" prefWidth="522.0" style="-fx-background: white; -fx-background-color: white;">
         <FlowPane fx:id="contentArea"
                   hgap="20" vgap="20"
                   prefWrapLength="1200"
                   alignment="CENTER">
            <padding>
               <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
         </FlowPane>
      </ScrollPane>
   </center>

   <left>
      <VBox prefHeight="200.0" prefWidth="150.0" spacing="10.0" BorderPane.alignment="CENTER" 
            style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
         <children>
            <Label text="Categories" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Button fx:id="btnCat1" mnemonicParsing="false" text="Burgers" 
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 120px;"/>
            <Button fx:id="btnCat2" mnemonicParsing="false" text="Sides" 
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 120px;"/>
            <Button fx:id="btnCat3" mnemonicParsing="false" text="Drinks" 
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 120px;"/>
            <Button fx:id="btnCat4" mnemonicParsing="false" text="Desserts" 
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 120px;"/>
            <Button fx:id="btnCat5" mnemonicParsing="false" text="Specials" 
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 120px;"/>
         </children>
      </VBox>
   </left>
</BorderPane>
