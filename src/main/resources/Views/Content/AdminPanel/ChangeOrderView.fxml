<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:id="changeOrderView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="600.0" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.deligo.Frontend.Controllers.Admin.ChangeOrderViewController">
   <children>
      <VBox layoutX="35.0" layoutY="10.0" spacing="10">
         <children>
            <HBox spacing="10">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBackButton" text="Back" />
                  <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveButton" text="Save Changes" />
               </children>
            </HBox>
            
            <GridPane hgap="10" vgap="10">
               <columnConstraints>
                  <ColumnConstraints minWidth="100" prefWidth="150" />
                  <ColumnConstraints minWidth="200" prefWidth="300" />
               </columnConstraints>
               
               <children>
                  <Label text="Order ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-text-fill: white;" />
                  <Label fx:id="orderIdLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-text-fill: white;" />
                  
                  <Label text="Customer:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-text-fill: white;" />
                  <Label fx:id="customerLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-text-fill: white;" />
                  
                  <Label text="Status:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-text-fill: white;" />
                  <ComboBox fx:id="statusComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                  
                  <Label text="Created At:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-text-fill: white;" />
                  <Label fx:id="createdAtLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-text-fill: white;" />
               </children>
            </GridPane>
            
            <TableView fx:id="itemsTable" prefHeight="200.0" prefWidth="600.0" style="-fx-background-color: transparent;">
               <columns>
                  <TableColumn fx:id="itemNameColumn" prefWidth="200.0" text="Item Name" />
                  <TableColumn fx:id="quantityColumn" prefWidth="100.0" text="Quantity" />
                  <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Price" />
                  <TableColumn fx:id="totalColumn" prefWidth="100.0" text="Total" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane> 